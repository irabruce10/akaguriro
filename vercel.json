{
  "version": 2,

  "buildCommand": "pnpm migrate up && expo export:web --output dist/client",

  "outputDirectory": "dist/client",

  "functions": {
    "dist/client/_expo/functions/**/*.js": {
      "runtime": "@vercel/node@5.1.8"
    }
  },

  "routes": [
    { "src": "/_expo/(.*)", "dest": "/_expo/$1" },

    {
      "src": "/api/(.*)",
      "dest": "/_expo/functions/api/$1+api.js"
    },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
