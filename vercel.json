{
  "version": 2,

  "buildCommand": "pnpm migrate up && expo export:web --output dist/client && tsc -p server/tsconfig.json --outDir dist/server",

  "outputDirectory": "dist/client",

  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node@5.1.8",
      "includeFiles": "dist/server/**"
    }
  },

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },

    {
      "src": "/_expo/(.*)",
      "dest": "/_expo/$1"
    },

    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
